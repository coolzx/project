<html>
    <head>
    </head>
    <body>
        <div>EXAM MANAGEMENT</div>
        <div>Show All Locations</div>
        <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
        <% end %>
        <table>
            <thead>
                <th>Room_number</th>
                <th>Total_table</th>
                <th>Building</th>
            </thead>
            <tbody>
                <% @locations.each do |location| %>
                <tr>
                    <td>
                        <%= location.room_no %>
                    </td>
                    <td>
                        <%= location.total_table %>
                    </td>
                    <td>
                        <%= location.building %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <h1><%= link_to 'add new location', add_location_form_path %></h1>
    </body>
</html>